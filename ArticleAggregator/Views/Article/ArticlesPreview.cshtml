@model List<ArticleModel>

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<div class="font-monospace text-center">
    Articles
    <div class="m-2">
        <div class="btn-group text-center" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-outline-primary">
                <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Create">Create</a>
            </button>
            <button type="button" class="btn btn-outline-primary">
                <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Update">Update</a>
            </button>
            <button type="button" class="btn btn-outline-primary">
                <a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Delete">Delete</a>
            </button>
            <button type="button" class="btn btn-outline-danger">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Back</a>
            </button>
        </div>
    </div>
</div>





<div>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <p>@item.Title</p>
                <span>. Rating - @item.Rating</span>
                <p>ID: @item.Id</p>
                <p>Source ID: @item.ArticleSourceId</p>
            </li>
        }
    </ul>
</div>